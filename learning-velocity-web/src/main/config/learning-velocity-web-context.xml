<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:socotra-core.properties</value>
                <value>classpath:hanover-common.properties</value>
                <value>classpath:hanover-api.properties</value>
            </list>
        </property>
    </bean>
    <bean class="com.kakao.hanover.util.PropertiesUtil">
        <property name="locations">
            <list>
                <value>classpath:socotra-core.properties</value>
                <value>classpath:hanover-common.properties</value>
                <value>classpath:hanover-api.properties</value>
            </list>
        </property>
    </bean>

    <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/v1/me**"/>
            <mvc:mapping path="/v1/me/bgmTrack**"/>
            <mvc:mapping path="/v1/me/followMember**"/>
            <mvc:mapping path="/v1/you/registeredFriend"/>
            <mvc:mapping path="/v1/home"/>
            <mvc:mapping path="/v1/musicRoom/*"/>
            <bean class="com.kakao.hanover.api.interceptor.I14yLoginCheckInterceptor"/>
        </mvc:interceptor>
        <mvc:interceptor>
            <mvc:mapping path="/v1/me/bgmTrack**"/>
            <mvc:mapping path="/v1/you/registeredFriend"/>
            <mvc:mapping path="/v1/home"/>
            <mvc:mapping path="/v1/musicRoom/*"/>
            <mvc:mapping path="/v1/me/followMember**"/>
            <bean class="com.kakao.hanover.api.interceptor.MemberCheckInterceptor"/>
        </mvc:interceptor>
    </mvc:interceptors>

    <context:annotation-config/>

    <bean id="swagger2Config" class="springfox.documentation.swagger2.configuration.Swagger2DocumentationConfiguration"/>

    <mvc:resources mapping="/swagger-ui.html" location="classpath:/META-INF/resources/"/>

    <mvc:resources mapping="/webjars/springfox-swagger-ui/**" location="classpath:/META-INF/resources/webjars/springfox-swagger-ui/"/>

</beans>