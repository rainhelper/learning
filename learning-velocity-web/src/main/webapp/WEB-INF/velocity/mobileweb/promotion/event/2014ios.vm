#if($StringUtils.equals("$!{promotion}", "OK"))
<script type="text/javascript">

music.mobile.requireCoupon = function() {

	var osType = music.mobile.getOsType();
	var id = null;
	if(osType === "IOS") {
		id = 141;
	}
	if(id != null){
		new daum.Ajax({
			onsuccess : function(r){
				result = daum.jsonToObject(r.responseText);
				if(result.resultCode!="1"){
					alert(result.resultMessage);
				}else{
					goUrl = escape(location.href);
					returnUrl = escape(location.href);
					location.href = "https://logins.daum.net/accounts/loginform.do?category=music&finaldest=" + goUrl + "&url=" + returnUrl;
					return;
				}
		},method:"post",encoding: "utf-8",paramString: "event_id="+id}).request('/promotion/event/2014iosresult.json');
	}
};

</script>
