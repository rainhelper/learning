<script type="text/javascript">
	
	jQuery("document").ready(
	function(){
		var ajaxUrl = "/onair/songlistformusictop.json";
		var opt = {
	    	method : "POST",
	    	onsuccess : function(res){
				var data = daum.jsonToObject(res.responseText);
				daum.Music.Home.Timeline.addSongToList(data);
	    	}
	    };
	    new daum.Ajax().request(ajaxUrl, opt);
	});
</script>
