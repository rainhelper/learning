#uaCheck()
<div id="daumContent"  class="cont_buy" role="main">
<h2 class="screen_out">이용권 구매</h2>

#if("$!{exception}" != "")
<div class="section_tit">
	<h3 class="tit_buy">이용권 구매 실패</h3>
</div>
<div class="buy_done">
	<strong class="tit_done">결제가 실패했습니다.</strong>
</div>

<div class="buy_btns">
	<button type="button" class="btn_buy btn_ticket" onclick="javascript:goTicketItem();">이전페이지</button>
	#if(!$StringUtils.equals("$!{isDaumMusicApp}", "true"))
	<a href="/top" class="btn_buy link_home">뮤직홈으로 이동</a>
	#else
	<a href="javascript:;" class="btn_buy link_home" onClick="javascript:goToAppMain();">뮤직홈으로 이동</a>
	#end

</div>

#if($StringUtils.equals("$!{isDaumMusicApp}", "true"))
	#if(!$StringUtils.equals("$!{isAndroid}", "true"))
		<script type="text/javascript">
//		  	window.location = "ios://gotoDownloadCenter";
		</script>
	#else
		<script type="text/javascript">
		   	JSInterface.goToBack();
		</script>
	#end
#end

<script type="text/javascript">
	function goTicketItem(){
		document.location.href="/ticket/ticketitem/list";
	}
</script>
#else
<div class="section_tit">
	<h3 class="tit_buy">이용권 구매 완료</h3>
</div>
<div class="buy_done">
	<strong class="tit_done">결제가 완료되었습니다.</strong>
	<p class="txt_done">Daum 뮤직앱에서 다운받으신 <br>이용권을 사용해 보세요</p>
</div>

<input type="hidden" id="title_$!{purchaseTicket.order.orderId}" title="$!{purchaseTicket.order.item.title}" />

<div class="buy_btns">
	<button type="button" class="btn_buy btn_ticket" onclick="javascript:music.mobile.MyOwnTicket.click(this, '$!{purchaseTicket.order.orderId}', '');">이용권 사용</button>
	#if(!$StringUtils.equals("$!{isDaumMusicApp}", "true"))
	<a href="/top" class="btn_buy link_home">뮤직홈으로 이동</a>
	#else
	<a href="javascript:;" class="btn_buy link_home" onClick="javascript:goToAppMain();">뮤직홈으로 이동</a>
	#end

</div>
<div class="buy_info">
	<strong class="screen_out">구매 곡 사용 안내</strong>
	<div class="cont_info">
		<span class="ico_info"></span><p class="txt_info">PC에서도 구매한 이용권을 관리하실 수 있습니다. <br>(music.daum.net 접속 &gt; MY 메뉴)</p>
	</div>
</div>
</div>

#if($StringUtils.equals("$!{isDaumMusicApp}", "true"))
	#if(!$StringUtils.equals("$!{isAndroid}", "true"))
		<script type="text/javascript">
//		  	window.location = "ios://goTicketInfo";
		</script>
	#else
		<script type="text/javascript">
		   	JSInterface.goTicketInfo();
		</script>
	#end
#end

#end
#if($StringUtils.equals("$!{isDaumMusicApp}", "true"))
<script type="text/javascript">
	function goToAppMain(){
	    	JSInterface.goToContentMenu();
	  }
</script>
#end
	
#parse("/velocity/mobileweb/realtimeissue.vm")