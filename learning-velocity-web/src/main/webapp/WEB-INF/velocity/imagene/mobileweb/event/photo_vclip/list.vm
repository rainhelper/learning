	<div class="section_photo">
		<div class="wrap_head">
			<h3 class="tit">포토</h3>
		</div>
		<ul class="list_photo" id="list_$!{event_id}">
#foreach($item in $photoList)
#set($tmp = $velocityCount)
			<li>
				<a href="/event/photo_vclip/detail?event_id=$!{item.eventId}&photo_id=$!{item.photoId}" class="wrap_thumb">
					<span class="thumb">
						<img #if($isWVGA)width="139" height="105"#else width="93" height="70"#end src="$ImageUtil.getMobileImageUrl("$!{item.filePath}", "144x120", "PHOTO", "C")" alt="">
