var callback_data = {
};
var callback = function(data){
	callback_data.imageUrl  = data[0];
	callback_data.width  = data[6];
	callback_data.height  = data[7];
	if(data && data[0] && data[5]){
		daum.$("inpFileUrl").value = data[0];
		daum.$("inpFileName").value = data[5];
	}
}
</script>
